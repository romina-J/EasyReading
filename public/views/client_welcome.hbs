<!DOCTYPE html>

<html lang="{{lang}}">

<head>
    <title>{{page_client_welcome_title}}</title>
    {{> head }}
    <script src="/js/audio.js"></script>
</head>

<body>
    <div class="row wrapper">

        <div class="medium-3 columns">
            <nav>
                {{> nav_client }}
                {{> nav_user_info }}
            </nav>
            {{> leave_site_info}}
        </div>

        <div class="medium-9 columns">

            <main>
                <div class="row">
                    <div class="column">
                        <h1 id="page_client_welcome_title">

                            {{{createTTSButton "page_client_welcome_title" lang}}}{{page_client_welcome_title}}</h1>
                    </div>

                </div>
                <hr class="client_welcome_hr">
                <div class="row">
                        <div class="small-12 columns">


                                <h2 class="page-client-welcome-intro-title" id="page_client_welcome_intro_title">
                                    {{{createTTSButton "page_client_welcome_intro_title,page_client_welcome_intro_description_1,page_client_welcome_intro_description_2,page_client_welcome_intro_description_3,page_client_welcome_intro_description_4,page_client_welcome_intro_description_5" lang}}}{{page_client_welcome_intro_title}}</h2>

                                <p class="page-client-welcome-intro-description" id="page_client_welcome_intro_description_1">{{page_client_welcome_intro_description_1}}</p>
                                <ul class="no-bullet">
                                    <li id="page_client_welcome_intro_description_2">{{page_client_welcome_intro_description_2}}</li>
                                    <li id="page_client_welcome_intro_description_3">{{page_client_welcome_intro_description_3}}</li>
                                    <li id="page_client_welcome_intro_description_4">{{page_client_welcome_intro_description_4}}</li>
                                    <li id="page_client_welcome_intro_description_5">{{page_client_welcome_intro_description_5}}</li>
                                </ul>


                            <!--<div class="medium-4 columns">
                                <p>
                                    <br />
                                    {{page_client_welcome_tool_panel_layout_description}}
                                    <br />
                                    <br />
                                    <img class="page-client-welcome-tool-panel-layou-img" aria-hidden="true" alt="{{page_client_welcome_tool_panel_layout_description}}" src="../images/tool_layout.png">
                                </p>
                            </div>-->
                        </div>
                   

                    {{#if user}}
                        {{#hasRole user "client"}}
                            <div class="small-12 columns">
                                <br />
                                <!--<img class="page-client-welcome-settings-icon" aria-hidden="true" alt="welcome settings" src="../images/settings_icon.png">-->
                                <a class="button button-settings" href="/client/configure?id={{user.id}}">{{page_client_welcome_to_configuration_link_text}}</a>
                                <!--<div class="page-client-welcome-to-configuration-description">{{page_client_welcome_to_configuration_description}}</div>-->
                            </div>
                 
                        {{/hasRole}}
                    {{/if}}
                </div>


            </main>

            {{>footer}}

        </div>


    </div>


</body>
</html>
