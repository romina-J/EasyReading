<!DOCTYPE html>

<html lang="{{lang}}">


<head>
    <title>{{profile_wizard_step_3_heading}}</title>
    {{> head }}
    <link href="/css/client-profile-setup.css" rel="stylesheet"/>
    <script src="/js/client-setup/client-profile-setup.js"></script>
    <script src="/js/client-setup/audio.js"></script>
    <script src="/js/client-setup/progress.js"></script>

</head>

<body>

<div>

    <div class="row">
        <header class="medium-12 columns header">
            <div class="columns small-1 large-1 logo-column">
                <img src="/images/setup/step1/logo.png" alt="EasyReading Logo" class="logo">
            </div>
            <div class="columns small-11 large-11 er-header">
                <h1 id="heading1" class="heading1">{{{step4_1_heading}}}</h1>
                <hr class="header-hr">
            </div>

        </header>

    </div>


    <main>

        <form id="wizard-form" method="POST" action="/client/setup">

            <div class="main-container">

                <div class="row">
                    <div class="medium-12 columns">
                        <div class="row-header">
                            <button type="button" class="er-audio-player" data-audio-elements="heading2_1"><img
                                    src="/images/setup/text-to-speech.png"></button>
                            <h2 id="heading2_1"  data-audio-src="/audio/step4_1/{{lang}}/heading2_1.mp3">
                                {{{step4_1_image_presentation}}}
                            </h2>
                        </div>
                    </div>
                </div>

                <div class="radio-button-container" aria-labelledby="desc1" data-name="presentation">
                    <div class="row">

                        <div class="columns small-2 large-2">

                            <div class="radio-button widget widget_large {{#ifEquals setupInformation.[7].presentation
                                                                                     "tooltip"}} checked {{/ifEquals}}"
                                 data-value="tooltip">
                                <img src="/images/setup/step4_1/{{lang}}/symbol-presentation-tooltip.png" alt="">
                            </div>
                        </div>
                        <div class="columns small-1 large-1 tts-column">
                            <button type="button" class="er-audio-player" data-audio-elements="button1_text"><img
                                    src="/images/setup/text-to-speech.png">
                            </button>
                        </div>
                        <div class="columns small-9 large-9">
                            <p id="button1_text"  data-audio-src="/audio/step4_1/{{lang}}/button1_text.mp3">
                                {{{symbol_presentation_tooltip_text}}}

                            </p>
                        </div>
                    </div>

                    <div class="row">

                        <div class="columns small-2 large-2">
                            <div class="radio-button  widget widget_large {{#ifEquals setupInformation.[7].presentation
                                                                                      "top"}} checked {{/ifEquals}}"
                                 data-value="top">
                                <img src="/images/setup/step4_1/{{lang}}/symbol-presentation-top.png" alt="">
                            </div>
                        </div>
                        <div class="columns small-1 large-1 tts-column">
                            <button type="button" class="er-audio-player" data-audio-elements="button2_text"><img
                                    src="/images/setup/text-to-speech.png">
                            </button>
                        </div>
                        <div class="columns small-9 large-9">
                            <p id="button2_text"  data-audio-src="/audio/step4_1/{{lang}}/button2_text.mp3">
                                {{{symbol_presentation_top_text}}}

                            </p>
                        </div>
                    </div>

                    <div class="row">

                        <div class="columns small-2 large-2">
                            <div class="radio-button widget widget_large {{#ifEquals setupInformation.[7].presentation
                                                                                     "next"}} checked {{/ifEquals}}"
                                 data-value="next">
                                <img src="/images/setup/step4_1/{{lang}}/symbol-presentation-next.png" alt="">
                            </div>
                        </div>
                        <div class="columns small-1 large-1 tts-column">
                            <button type="button" class="er-audio-player" data-audio-elements="button3_text"><img
                                    src="/images/setup/text-to-speech.png">
                            </button>
                        </div>
                        <div class="columns small-9 large-9">
                            <p id="button3_text"  data-audio-src="/audio/step4_1/{{lang}}/button3_text.mp3">
                               {{{symbol_presentation_next_text}}}
                            </p>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="columns large-centered progress-column">
                    <div class="progress-container">
                        <button id="prevButton" type="button" class="button progress-button"><img src="/images/back.png"
                                                                                                  alt="Back"></button>
                        <div class="progress-indicator-container">
                            <ol class="progress-indicator">

                                {{#each stepInformation}}
                                    {{#ifEquals step "completedStep"}}
                                        <li class="is-complete" data-step="{{stepNumber}}">
                                        </li>
                                    {{/ifEquals}}
                                    {{#ifEquals step "currentStep"}}
                                        <li class="is-current {{percent}}" data-step="{{stepNumber}}">
                                        </li>
                                    {{/ifEquals}}
                                    {{#ifEquals step "upcomingStep"}}
                                        <li class="" data-step="{{stepNumber}}">
                                        </li>
                                    {{/ifEquals}}
                                {{/each}}
                            </ol>
                        </div>
                        <button id="nextButton" type="button" class="button progress-button"><img src="/images/next.png"
                                                                                                  alt="Next"></button>
                        <br>
                        <span class="back-label progress-label">{{previous}}</span>
                        <span class="next-label progress-label">{{next}}</span>

                    </div>
                </div>
            </div>

        </form>
    </main>


</div>


</body>
</html>