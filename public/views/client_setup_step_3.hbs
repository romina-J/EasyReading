<!DOCTYPE html>

<html lang="{{lang}}">


<head>
    <title>{{profile_wizard_step_3_heading}}</title>
    {{> head }}
    <link href="/css/client-profile-setup.css" rel="stylesheet"/>
    <script src="/js/client-profile-setup.js"></script>

</head>

<body>

<div class="row wrapper main-content">

    <main>
        <form method="POST" action="/client/setup">
            <div class="medium-12 columns">

                <div class="setup">

                    <div role="radiogroup" aria-labelledby="desc1" class="radio-button-container"
                         data-name="preferred_symbol">
                        <h1 id="desc1">
                           {{symbol_title}}
                        </h1>
                        <div class="container">
                            <div class="radio-button  {{#ifEquals setupInformation.[1].preferred_symbol
                                                                  "bliss"}} checked {{/ifEquals}}" data-value="bliss">
                                <img src="/images/setup/step3/bliss.png" alt=""><span class="container-info">{{bliss_label}}</span>
                            </div>
                            <div class="radio-button  {{#ifEquals setupInformation.[1].preferred_symbol
                                                                  "arasaac"}} checked {{/ifEquals}}"
                                 data-value="arasaac">
                                <img src="/images/setup/step3/arasaac.png" alt=""><span class="container-info"> {{arasaac_label}}</span>
                            </div>
                            <div class="radio-button  {{#ifEquals setupInformation.[1].preferred_symbol
                                                                  "widgit"}} checked {{/ifEquals}}" data-value="widgit">
                                <img src="/images/setup/step3/widgit.png" alt=""><span class="container-info">{{widgit_label}}</span>
                            </div>

                            <div class="radio-button  {{#ifEquals setupInformation.[1].preferred_symbol
                                                                  "none"}} checked {{/ifEquals}}" data-value="none">
                                <img src="/images/setup/step3/stop.png" alt=""><span class="container-info big"> {{none_label}}</span>
                            </div>
                        </div>
                    </div>
                </div>




            </div>
            <span class="clearfix"></span>

            <div class="row">

                <div class="columns small-6 small-centered">
                    <div>
                        {{#if previousStep}}
                            <input type="image" src="/images/back.png" alt="Back" name="back"
                                   class="button step-button">
                            <!--  <a href="#" class="button step-button"><img src="/images/back.png" alt="Back"/></a>-->
                        {{/if}}




                        <div class="progress-indicator-container">
                            <ol class="progress-indicator">

                                {{#each stepInformation}}
                                    {{#ifEquals step "completedStep"}}
                                        <li class="is-complete" data-step="{{stepNumber}}">
                                        </li>
                                    {{/ifEquals}}
                                    {{#ifEquals step "currentStep"}}
                                        <li class="is-current" data-step="{{stepNumber}}">
                                        </li>
                                    {{/ifEquals}}
                                    {{#ifEquals step "upcomingStep"}}
                                        <li class="" data-step="{{stepNumber}}">
                                        </li>
                                    {{/ifEquals}}
                                {{/each}}
                            </ol>
                        </div>
                        <input type="image" src="/images/next.png" alt="Next" name="next" class="button step-button"
                               id="">
                    </div>

                </div>
            </div>
        </form>
    </main>


</div>


</body>
</html>