<!DOCTYPE html>

<html lang="{{lang}}">


<head>
    <title>{{page_content_replacement_title}}</title>
    {{> head }}
</head>
<style>
    table {
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
    }

    th, td {
        padding: 3px;
    }
</style>

<body>
<div class="row wrapper">

    <div class="medium-3 columns">
        <nav>
            {{> nav_backend }}
            {{> nav_user_info }}
        </nav>
    </div>

    <div class="medium-9 columns">

        <main>

            <div class="row columns">

                <h1>All Sites</h1>
                <form method="POST" action="embedded_site_delete_profile">
                    <table>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">id</th>
                            <th scope="col">Url</th>
                            <th scope="col">Profile title</th>
                            <th scope="col">Pid</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>


                        {{#each sites}}
                            <tr>
                                <td> {{ title }}</td>
                                <td> {{ id }}</td>
                                <td> {{ url }}</td>
                                <td>{{profileTitle}}</td>
                                <td> {{ pid }}</td>
                                <td><a href="edit_embedded_site?id={{id}}">Edit</a> </td>
                                <td><input type="submit" name="delete_{{ id }}" value="Delete"></td>
                            </tr>

                        {{/each}}
                    </table>
                </form>


                <h1>All Profiles</h1>
                <form method="POST" action="embedded_site_delete_site">
                <table>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Pid</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Edit config</th>
                        <th scope="col">Delete</th>
                    </tr>


                        {{#each profiles}}
                            <tr>
                                <td> {{ title }}</td>
                                <td> {{ id }}</td>
                                <td><a href="edit_embedded_profile?id={{id}}">Edit</a> </td>
                                <td><a href="embedded_profile_configure?id={{pid}}">Edit</a> </td>
                                {{#if used}}
                                    <td>Profile used in site</td>
                                {{else}}
                                    <td><input type="submit" name="delete_{{ id }}" value="Delete"></td>
                                {{/if}}

                            </tr>

                        {{/each}}

                </table>
                </form>

            </div>
        </main>
    </div>
</div>
</body>
</html>
