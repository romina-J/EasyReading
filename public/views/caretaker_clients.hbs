<!DOCTYPE html>

<html lang="{{lang}}">


<head>
    <title>{{page_clientlist_title}}</title>
    {{> head }}
</head>

<body>

<div class="row wrapper">

    <div class="medium-3 columns">
        <nav>
            {{> nav_backend }}
            {{> nav_user_info }}
        </nav>
    </div>

    <div class="medium-9 columns">

        <main>

            <div class="row columns">
                <h1>{{page_clientlist_title}}</h1>

                <p>{{page_clinetlist_edit}}</p>

                <h2>{{page_clinetlist_clients}}</h2>

                {{#if items.length}}
                    <ul>
                        {{#each existingClientCarerRelations}}
                            <li>
                                <a href="/caretaker/client-configure?id={{ id }}">
                                    {{ email }}
                                </a>
                            </li>
                        {{/each}}
                    </ul>
                {{else}}
                    {{page_clientlist_clients_empty}}
                {{/if}}
            </div>

        </main>
    </div>
</div>
</body>
</html>
