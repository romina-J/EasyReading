<!DOCTYPE html>

<html lang="{{lang}}">


<head>
    <title>{{step5_heading}}</title>
    {{> head }}
    <link href="/css/client-profile-setup.css" rel="stylesheet"/>
    <script src="/js/client-setup/client-profile-setup.js"></script>
    <script src="/js/audio.js"></script>
    <script src="/js/client-setup/progress.js"></script>

</head>

<body>

<div>

    <div class="row">
        <header class="medium-12 columns header">
            <div class="columns small-1 large-1 logo-column">
                <img src="/images/setup/step1/logo.png" alt="EasyReading Logo" class="logo">
            </div>
            <div class="columns small-11 large-11 er-header">
                <h1 id="heading1" class="heading1">{{{step5_heading}}}</h1>
                <hr class="header-hr">
            </div>

        </header>

    </div>

    <main>
        <form id="wizard-form" method="POST" action="/client/setup">

            <div class="main-container">
                <div class="row">
                    <div class="medium-12 columns">
                        <div class="row-header">

                            <div class="er-audio-player-float">
                                {{{createTTSButton "layout_help_heading,layout_help_heading_text" lang}}}
                            </div>
                            <div>

                                <h2 id="layout_help_heading">
                                    {{{layout_help_heading}}}

                                </h2>
                                <div id="layout_help_heading_text">
                                    {{{layout_help_heading_text}}}
                                </div>
                            </div>


                        </div>
                    </div>
                </div>

                <div class="row">

                    <div class="columns small-4 large-4">
                        <div class="checkbox widget widget_large {{#ifEquals setupInformation.[4].fonts
                                                                "true"}} checked {{/ifEquals}}" data-name="fonts">
                            <img src="/images/setup/step5/magnify.png" alt="">
                        </div>
                        <div class="row">
                            <div class="columns small-12 text-center">
                                <span id="change_font_size" class="container-info">{{{change_font_size}}}</span>
                                <br>
                                {{{createTTSButton "change_font_size" lang}}}
                            </div>
                        </div>
                    </div>

                    <div class="columns small-4 large-4">
                        <div class="checkbox  widget widget_large {{#ifEquals setupInformation.[4].line_spacing
                                                                "true"}} checked {{/ifEquals}}"
                             data-name="line_spacing">
                            <img src="/images/setup/step5/line-space.png" alt="">
                        </div>
                        <div class="row">
                            <div class="columns small-12 text-center">
                                <span id="change_line_spacing" class="container-info">{{{change_line_spacing}}}</span>
                                <br>
                                {{{createTTSButton "change_line_spacing" lang}}}

                            </div>
                        </div>
                    </div>
                    <div class="columns small-4 large-4">
                        <div class="checkbox  widget widget_large {{#ifEquals setupInformation.[4].colorize
                                                                "true"}} checked {{/ifEquals}}" data-name="colorize">
                            <img src="/images/setup/step5/colorize.png" alt="">
                        </div>

                        <div class="row">
                            <div class="columns small-12 text-center">
                                <span id="change_color" class="container-info">{{{change_color}}}</span>
                                <br>
                                {{{createTTSButton "change_color" lang}}}

                            </div>
                        </div>
                    </div>
                </div>

            </div>


            <div class="row">

                <div class="columns large-centered progress-column">
                    <div class="progress-container">
                        <button id="prevButton" type="button" class="button progress-button"><img src="/images/back.png"
                                                                                                  alt="Back"></button>
                        <div class="progress-indicator-container">
                            <ol class="progress-indicator">

                                {{#each stepInformation}}
                                    {{#ifEquals step "completedStep"}}
                                        <li class="is-complete" data-step="{{stepNumber}}">
                                        </li>
                                    {{/ifEquals}}
                                    {{#ifEquals step "currentStep"}}
                                        <li class="is-current {{percent}}" data-step="{{stepNumber}}">
                                        </li>
                                    {{/ifEquals}}
                                    {{#ifEquals step "upcomingStep"}}
                                        <li class="" data-step="{{stepNumber}}">
                                        </li>
                                    {{/ifEquals}}
                                {{/each}}
                            </ol>
                        </div>
                        <button id="nextButton" type="button" class="button progress-button"><img src="/images/next.png"
                                                                                                  alt="Next"></button>
                        <br>
                        <span class="back-label progress-label">{{previous}}</span>
                        <span class="next-label progress-label">{{next}}</span>

                    </div>
                </div>
            </div>

        </form>
    </main>


</div>


</body>
</html>