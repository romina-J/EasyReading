<!DOCTYPE html>

<html lang="{{lang}}">


<head>
    <title>{{final_step_heading}}</title>
    {{> head }}
    <link href="/css/client-profile-setup.css" rel="stylesheet"/>
    <script src="/js/client-setup/client-profile-setup.js"></script>
    <script src="/js/client-setup/audio.js"></script>

    <script>

        function start(counter) {
            if (counter < 100) {
                setTimeout(function () {
                    counter++;

                    let erSlideOut = $("#er-tab-slide-out-handle");
                    if (erSlideOut.length) {

                       let html = '<div class="arrow_box">' +
                                '<button type="button" id="bubble_audio" class="er-audio-player" data-audio-elements="bubble_audio_help"><img\n' +
                                '                                    src="/images/setup/text-to-speech.png"></button>' +
                                '<div id="bubble_audio_help" data-audio-src="/audio/setup_finished/{{lang}}/here_is_your_help.mp3">{{{final_step_here_is_help}}}</div>' +
                                '</div>';

                        erSlideOut.append(html);
                        document.getElementById("bubble_audio").addEventListener("click", function (event) {
                            event.stopPropagation();
                            event.preventDefault();

                            audioPlayer.playOrStop($("#bubble_audio"));

                        },true);
                    } else {
                        start(counter);
                    }

                }, 200);
            }
        }

        start(0);

    </script>

</head>

<body>

<div>

    <div class="row">
        <header class="medium-12 columns header">
            <div class="columns small-1 large-1 logo-column">
                <img src="/images/setup/step1/logo.png" alt="EasyReading Logo" class="logo">
            </div>
            <div class="columns small-11 large-11 er-header">
                <h1 id="heading1" class="heading1"  data-audio-src="heading.mp3">{{{final_step_heading}}}</h1>
                <hr class="header-hr">
            </div>

        </header>

    </div>
    <main>

        <div class="main-container">
            <div class="row">

                <div class="row">
                    <div class="medium-12 columns">
                        <div class="row-header">

                            <div class="columns small-1 large-1">
                            <button type="button" class="er-audio-player er-audio-player-float" data-audio-elements="heading2_1 heading2_1_text heading2_2_text"><img
                                    src="/images/setup/text-to-speech.png"></button>
                            </div>
                            <div class="columns small-11 large-11">
                                <h2  id="heading2_1" data-audio-src="/audio/setup_finished/{{lang}}/heading2_1.mp3" class="heading1">{{{final_step_complete}}}</h2>
                                <div>
                                    <div id="heading2_1_text" data-audio-src="/audio/setup_finished/{{lang}}/heading2_1_text.mp3">{{{final_step_complete_text1}}}</div>

                                    <div id="heading2_2_text"  data-audio-src="/audio/setup_finished/{{lang}}/heading2_2_text.mp3">{{{final_step_complete_text2}}}</div>

                                </div>
                                <br>
                            </div>

                        </div>
                    </div>
                </div>

            </div>


            <div class="row">

                <div class="columns small-4 large-4">
                    <a class="widget widget_large" href="https://www.google.com/" style="display: block">
                        <img src="/images/setup/setup_finished/goto_google.png" alt="Goto Google">
                        <img src="/images/setup/setup_finished/click_symbol.png" alt="" id="goto_google_click_symbol">
                    </a>
                    <div class="row">
                        <div class="columns small-12 text-center">
                            <span id="button1_text" data-audio-src="/audio/setup_finished/{{lang}}/goto_google.mp3" class="container-info">{{{final_step_goto_google}}}</span>
                            <br>
                            <button type="button" class="er-audio-player" data-audio-elements="button1_text"><img
                                    src="/images/setup/text-to-speech.png"></button>

                        </div>
                    </div>
                </div>
            </div>
        </div>




        <div class="top_arrow_box">

            <img src="/images/setup/setup_finished/toolbar.png" alt="">
            <img src="/images/setup/setup_finished/click_symbol.png" alt="" id="toolbar_click_symbol">
            <button type="button" id="bubble_audio" class="er-audio-player" data-audio-elements="more_settings"><img src="/images/setup/text-to-speech.png"></button>
            <div id="more_settings" data-audio-src="/audio/setup_finished/{{lang}}/more_settings.mp3">{{{final_step_goto_config}}}</div>



        </div>

    </main>
</div>


</body>
</html>