<!DOCTYPE html>

<html lang="{{lang}}">


<head>
    <title>{{page_content_replacement_title}}</title>
    {{> head }}
</head>
<style>
    table {
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
    }
    th, td{
        padding: 3px;
    }
</style>

<body>
<div class="row wrapper">

    <div class="medium-3 columns">
        <nav>
            {{> nav_backend }}
            {{> nav_user_info }}
        </nav>
    </div>

    <div class="medium-9 columns">

        <main>

            <div class="row columns">

                <form id="submit" method="post">
                    <label>Title: <input type="text" name="title" value="{{title}}"></label>
                    <label>URL: <input type="url" name="url" value="{{url}}"></label>

                    <label for="profile">Choose a profile:</label>

                    <select name="profile" id="profile">
                        {{#each profiles}}
                            {{#ifEquals pid ../pid}}
                                <option value="{{id}}" selected="selected">{{title}}</option>
                            {{else}}
                                <option value="{{id}}">{{title}}</option>
                            {{/ifEquals}}

                        {{/each}}
                    </select>
                    <input type="hidden" name="esm_id" value="{{esm_id}}">
                    <input type="hidden" name="id" value="{{id}}">
                    <input type="submit" value="save"/>
                </form>
            </div>
        </main>
    </div>
</div>
</body>
</html>
